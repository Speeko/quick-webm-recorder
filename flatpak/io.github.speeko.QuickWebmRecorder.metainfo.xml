<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>io.github.speeko.QuickWebmRecorder</id>
  <name>Quick WebM Recorder</name>
  <summary>Lightweight screen region recorder</summary>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>MIT</project_license>
  <developer id="io.github.speeko">
    <name>Spekks</name>
  </developer>
  <description>
    <p>
      A lightweight ShareX-style screen region recorder for Linux. Select a region,
      record video with system audio, and get the file path copied to your clipboard.
    </p>
    <p>Features:</p>
    <ul>
      <li>Global hotkey to trigger recording from anywhere</li>
      <li>Click and drag to select any screen region</li>
      <li>Records system audio through PulseAudio/PipeWire</li>
      <li>H.264/MP4 output compatible with all devices</li>
      <li>Quality presets from Lossless to Tiny</li>
      <li>File path automatically copied to clipboard</li>
      <li>Runs quietly in your system tray</li>
    </ul>
  </description>
  <launchable type="desktop-id">io.github.speeko.QuickWebmRecorder.desktop</launchable>
  <url type="homepage">https://github.com/Speeko/quick-webm-recorder</url>
